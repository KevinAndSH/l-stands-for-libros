<!DOCTYPE html>
<html lang="es">

  <%- include("../partials/head", {title: "Perfil", uniqueStyle: "style-perfil.css"}) %>

  <body>
    <%- include("../partials/header") %>

    <%- include("../partials/whatsapp") %>

    <main>
      <div class="banner">
        <div class="banner-content">
          <div class="desc">
            <img src=<%= "/img/users/" + locals.session.user.img_path %> />
            <form class="image-container">
              <img src=<%= "/img/users/" + locals.session.user.img_path %> />
              <label href="#" class="btn-2" for="profile_pic">Cambia foto de perfil</label>
              <input type="file" id="profile_pic">
            </form>
          </div>
        </div>
      </div>


      <div class="right-container">
        <h3><%= locals.session.user.first_name %> <%= locals.session.user.last_name %></h3>

        <div class="profile-descrip">
          <p>
            <% if (locals.session.user.category == "vendor") { %>
              Vendedor
            <% } %>
            <% if (locals.session.user.category == "buyer") { %>
              Comprador
            <% } %>
          </p>

          <p><%= locals.session.user.email %></p>
      </div>

      <a href="/users/profile-edit/" class="btn-1">Editar Perfil</a>
    </main>

    <%- include("../partials/footer") %>
  </body>

</html>